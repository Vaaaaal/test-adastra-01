{% comment %}
    Détails du processus de création des produits

{% endcomment %}
 
<div class="container pt-16 pb-20">
    <div class="flex flex-col md:flex-row items-start gap-x-16 lg:gap-x-20 gap-y-6">
        {% if section.blocks.size > 0 %}
            <div class="static md:sticky top-[120px] mx-auto max-w-[350px] w-full md:w-2/5">
                <div 
                    class="swiper is-process-card w-full"
                    data-effect="cards"
                    data-rewind="true"
                    data-autoplay='5000'
                >
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                            {% case block.type %}
                                {% when 'process-image' %}
                                    <div class="swiper-slide">
                                        {{ block.settings.image_content | image_url: width: 1000 | image_tag: class: 'rounded w-full object-cover shadow-md' }}
                                    </div>
                            {% endcase %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        <div>
            <h2
                class="text-7xl sm:text-8xl lg:text-9xl max-w-96"
                style="line-height: 0.8;"
            >
                {{ section.settings.title }}
            </h2>

            <div class="mt-14 flex flex-col">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'process-step' %}
                            <div
                                class="pb-12 {% if forloop.last %}pb-0{% endif %}"
                            >
                                {% comment %} <h3 class="apply-h4">{{ block.settings.title }}</h3> {% endcomment %}
                                <h3 class="mb-2">{{ block.settings.title }}</h3>
                                <p>{{ block.settings.content }}</p>
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Process",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Titre",
            "default": "Notre process"
        },
    ],
    "blocks": [
        {
            "type": "process-image",
            "name": "Process Images",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_content",
                    "label": "Image",
                },
            ]
        },
        {
            "name": "Process Step",
            "type": "process-step",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Titre",
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Contenu",
                },
            ]
        },
    ],
    "presets": [
        {
            "name": "Process"
        }
    ]
}
{% endschema %}