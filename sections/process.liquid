{% comment %}
    Détails du processus de création des produits

{% endcomment %}
 
<div class="container">
    <div class="grid grid-cols-5 gap-x-6">
        <div class="col-span-2">
            <div>
                {{ section.settings.image_1 | image_url: width: 800 | image_tag }}
            </div>
            
            <div class="flex justify-between">
                {{ section.settings.image_2 | image_url: width: 800 | image_tag }}
                {{ section.settings.image_3 | image_url: width: 800 | image_tag }}
            </div>

            <div class="flex justify-between">
                {{ section.settings.image_4 | image_url: width: 800 | image_tag }}
                {{ section.settings.image_5 | image_url: width: 800 | image_tag }}
            </div>

            <div class="flex justify-between">
                <div class="flex flex-col">
                    {{ section.settings.image_6 | image_url: width: 800 | image_tag }}
                    {{ section.settings.image_7 | image_url: width: 800 | image_tag }}
                </div>
                {{ section.settings.image_8 | image_url: width: 800 | image_tag }}
            </div>
        </div>

        <div class="col-span-3">
            <h2>{{ section.settings.title }}</h2>

            <div class="flex flex-col">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'process-step' %}
                            <div>
                                {% comment %} <h3 class="apply-h4">{{ block.settings.title }}</h3> {% endcomment %}
                                <h3>{{ block.settings.title }}</h3>
                                <p>{{ block.settings.content }}</p>
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Process",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Titre",
            "default": "Notre process"
        },
        {
            "type": "image_picker",
            "id": "image_1",
            "label": "Image 1"
        },
        {
            "type": "image_picker",
            "id": "image_2",
            "label": "Image 2"
        },
        {
            "type": "image_picker",
            "id": "image_3",
            "label": "Image 3"
        },
        {
            "type": "image_picker",
            "id": "image_4",
            "label": "Image 4"
        },
        {
            "type": "image_picker",
            "id": "image_5",
            "label": "Image 5"
        },
        {
            "type": "image_picker",
            "id": "image_6",
            "label": "Image 6"
        },
        {
            "type": "image_picker",
            "id": "image_7",
            "label": "Image 7"
        },
        {
            "type": "image_picker",
            "id": "image_8",
            "label": "Image 8"
        }
    ],
    "blocks": [
        {
            "name": "Process Step",
            "type": "process-step",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Titre",
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Contenu",
                },
            ]
        },
    ],
    "presets": [
        {
            "name": "Process"
        }
    ]
}
{% endschema %}