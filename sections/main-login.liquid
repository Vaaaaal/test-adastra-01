{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if section.settings.enable_shop_login_button == false -%}
  {%- assign hide_shop_login_button = true -%}
{%- endif -%}

<div class="customer login section-{{ section.id }}-padding">
  <h1 id="recover" tabindex="-1">
    {% comment %} {{ 'customer.recover_password.title' | t }} {% endcomment %}
    Forgot your password?
  </h1>
  <div>
    <p>
      {% comment %} {{ 'customer.recover_password.subtext' | t }} {% endcomment %}
        Enter your email address below and we'll send you a link to reset your password.
    </p>

    {%- form 'recover_customer_password' -%}
      {% assign recover_success = form.posted_successfully? %}
      <div class="field">
        <input
          type="email"
          value=""
          name="email"
          id="RecoverEmail"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
          {% endif %}
          {% comment %} placeholder="{{ 'customer.login_page.email' | t }}" {% endcomment %}
          placeholder="johndoe@mail.com"
        >
        <label for="RecoverEmail">
          {% comment %} {{ 'customer.login_page.email' | t }} {% endcomment %}
            Email
        </label>
      </div>
      {%- if form.errors -%}
        <small id="RecoverEmail-email-error" class="form__message">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{ form.errors.messages.form }}
        </small>
      {%- endif -%}

      <button>
        {% comment %} {{ 'customer.login_page.submit' | t }} {% endcomment %}
        Submit
      </button>

      <a href="#login">
        {% comment %} {{ 'customer.login_page.cancel' | t }} {% endcomment %}
        Cancel
      </a>
    {%- endform -%}
  </div>

  <h1 id="login" tabindex="-1">
    {% comment %} {{ 'customer.login_page.title' | t }} {% endcomment %}
    Sign in
  </h1>
  <div>
    {%- if recover_success == true -%}
      <h3 class="form__message" tabindex="-1" autofocus>
        <span class="svg-wrapper">
          {{- 'icon-success.svg' | inline_asset_content -}}
        </span>
        {% comment %} {{ 'customer.recover_password.success' | t }} {% endcomment %}
        We've sent you an email with a link to update your password.
      </h3>
    {%- endif -%}
    {%- form 'customer_login', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        <h2 class="form__message" tabindex="-1" autofocus>
          <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {% comment %} {{ 'templates.contact.form.error_heading' | t }} {% endcomment %}
            There was an error with your email or password. Please try again.
        </h2>
        {{ form.errors | default_errors }}
      {%- endif -%}

      {%- if shop.features.login_with_shop_classic_customer_accounts? -%}
        <section name="sign-in-with-shop-provider">
          {{ shop | login_button: hide_button: hide_shop_login_button }}

          {%- unless hide_shop_login_button -%}
            <p>
              {% comment %} {{ 'customer.login_page.alternate_provider_separator' | t }} {% endcomment %}
                or
            </p>
          {%- endunless -%}
        </section>
      {%- endif -%}

      <div class="field">
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
          {% comment %} placeholder="{{ 'customer.login_page.email' | t }}" {% endcomment %}
            placeholder="johndoe@mail.com"
        >
        <label for="CustomerEmail">
          {% comment %} {{ 'customer.login_page.email' | t }} {% endcomment %}
            Email
        </label>
      </div>

      {%- if form.password_needed -%}
        <div class="field">
          <input
            type="password"
            value=""
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            {% comment %} placeholder="{{ 'customer.login_page.password' | t }}" {% endcomment %}
            placeholder="••••••••"
          >
          <label for="CustomerPassword">
            {% comment %} {{ 'customer.login_page.password' | t }} {% endcomment %}
            Password
          </label>
        </div>

        <a href="#recover">
          {% comment %} {{ 'customer.login_page.forgot_password' | t }} {% endcomment %}
            Forgot your password?
        </a>
      {%- endif -%}

      <button>
        {% comment %} {{ 'customer.login_page.sign_in' | t }} {% endcomment %}
        Sign in
      </button>

      <a href="{{ routes.account_register_url }}">
        {% comment %} {{ 'customer.login_page.create_account' | t }} {% endcomment %}
        Create account
      </a>
    {%- endform -%}
  </div>

  {%- if shop.checkout.guest_login -%}
    <div>
        <hr>
        <h2>
            {% comment %} {{ 'customer.login_page.guest_title' | t }} {% endcomment %}
            Continue as a guest
        </h2>

        {%- form 'guest_login' -%}
            <button>
                {% comment %} {{ 'customer.login_page.guest_continue' | t }} {% endcomment %}
                Continue as guest
            </button>
        {%- endform -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "main-login",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "t:sections.main-login.shop_login_button.enable",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}