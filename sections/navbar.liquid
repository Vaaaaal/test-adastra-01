{% comment %}
    Contenu du footer avec la possibilité d'ajouter des paramètres à définir dans les settings de Shopify

{% endcomment %}
 
<div class="fixed top-0 bottom-0 left-0 right-0 z-40 mix-blend-difference pointer-events-none">
  <div class="container pt-6 flex justify-starts items-center">
    <img class="max-w-36" src="{{ 'logo-oceneo.svg' | asset_url }}">
  </div>
</div>

<nav class="fixed top-0 bottom-0 left-0 right-0 z-50 pointer-events-none">
  <div class="container pt-6 flex justify-between items-center">
    <a id="navbar_logo" href="/" class="opacity-0 pointer-events-auto">
      <img class="max-w-36" src="{{ 'logo-oceneo-black.png' | asset_url }}">
    </a>

    <div id="navbar_elements" class="flex gap-x-2 pointer-events-auto">
      <a href="/" class="button-primary">Je crée ma paire</a>

      <a class="border border-gray-200 p-3 bg-white rounded-md shadow-sm hover:shadow-md transition-shadow" href="/cart">
        <svg class="w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 2L3 6V20C3 20.5304 3.21071 21.0391 3.58579 21.4142C3.96086 21.7893 4.46957 22 5 22H19C19.5304 22 20.0391 21.7893 20.4142 21.4142C20.7893 21.0391 21 20.5304 21 20V6L18 2H6Z" stroke="#161616" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M3 6H21" stroke="#161616" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M16 10C16 11.0609 15.5786 12.0783 14.8284 12.8284C14.0783 13.5786 13.0609 14 12 14C10.9391 14 9.92172 13.5786 9.17157 12.8284C8.42143 12.0783 8 11.0609 8 10" stroke="#161616" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <button class="border border-gray-200 p-3 bg-white rounded-md">
        <svg class="w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M2 8C2 7.44772 2.44772 7 3 7H21C21.5523 7 22 7.44772 22 8C22 8.55228 21.5523 9 21 9H3C2.44772 9 2 8.55228 2 8Z" fill="#161616"/>
          <path d="M2 16C2 15.4477 2.44772 15 3 15H21C21.5523 15 22 15.4477 22 16C22 16.5523 21.5523 17 21 17H3C2.44772 17 2 16.5523 2 16Z" fill="#161616"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

{% stylesheet %}
#navbar_elements {
  isolation: isolate;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Navbar",
  "settings": [],
  "presets": [
    {
      "name": "Navbar"
    }
  ]
}
{% endschema %}